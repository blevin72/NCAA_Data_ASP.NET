@using NCAA_Data

@model List<PlayerStatistics>


@{
    ViewData["Title"] = "Home Page";
}

@* @@model NCAA_Data.PlayerStatistics *@

<link rel="stylesheet" type="text/css" href="~/css/site.css" />

<head class="main">
    <style>
            body, html {
                height: 100%;
            }

        body {
            background-repeat: no-repeat;
            background-color: white;
            background-size: cover; 
            height: 100%;
            padding-top: 60px;
            padding-bottom: 40px;
        }

            .btn-primary {
                background-color: white;
                color: black;
                border: none;
                padding: 10px 10px;
                border-radius: 5px;
            }

                .btn-primary:hover {
                    border-width: 2px;
                    color: black;
                    background-color: ghostwhite;
                }
            .player-info h1 {
                font-size: medium;
                text-decoration: underline;
                text-transform: uppercase;
            }
            .player-info h2 {
                font-size: small
            }
    </style>
</head>
@{
    var sortedModel = Model
        .Where(item => item.Stat != "0")
        .OrderByDescending(item => double.Parse(item.Stat));
}

@foreach (var item in sortedModel)
{
        <div class="player-info">
            <h1>@item.PlayerName</h1>
            <div class="info">
                <h2>Conference: @item.Conference</h2>
                <h2>Team: @item.Team</h2>
                <h2>Category: @item.Category</h2>
                <h2>Result: @item.Stat @item.StatType</h2>
            </div>
        </div>
        <hr class="separator" />
    
}